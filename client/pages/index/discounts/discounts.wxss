/* pages/index/discounts/discounts.wxss */
.discount-list {
  padding: 10px 15px;
}

.discount-img {
  border-top-left-radius:10px;
  border-top-right-radius:10px;
  text-align: center;
  width: 100%;
  height: 162px;
}

.cell-inline {
  display: flex;
}

.little-logo {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.desc-row {
  font-size: 14px;
  color: #afafaf;
}

.now-price {
  color: #f40;
  line-height: 30px;
}

.ori-price {
  color: #aaa;
  text-decoration: line-through;
  font-size: 14px;
  line-height: 20px!important;
}
.end-time {
  font-size: 16px;
  color: #28B8A1;
  float: right;
}
.cell-bottom view {
  display: inline-block;
  padding: 0px 5px;
}
.discount-info {
  margin-top:-8px;
  border: 1px solid #e5e5e5;
  border-top: none;
  padding: 2px 10px;
}
.end-time text {
    border: 1px solid #c2e9e6;
    background-color: #efffff;
    padding: 0px 2px 0px 2px;
}
.make-phone {
  position:absolute;
  right: 30px;
}
.make-phone image {
  width: 30px;
  height: 30px;
}