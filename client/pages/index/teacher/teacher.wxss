.grid-quick text {
  display: block;
  line-height: 23px;
  padding:14px 15px 10px;
  color:#999;
  font-size:13px;
}
.weui-grid {
  width: 50%;
  padding: 12px 15px;
}
.weui-grid__icon {
  display: inline-block;
  padding-bottom:8px;
}
.weui-grid__label {
  display: inline-block;
  margin-left: 10px;
}
.grid-title {
  text-align: left;
}
.grid-info {
  width: 110px;
  text-align: left;
  font-size: 12px;
  color: #AFAFAF;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.school-logo {
  width: 40px;
  height: 40px;
  margin-right: 5px;
  border:1px solid #28B8A1;
  border-radius:26px
}
.weui-cell_primary {
  margin-left: 10px;
}
.weui-media-box__desc {
  width: 200px;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.searchbar-result{
  height:225px;
  position:absolute;
  width:100%;
  z-index:10;
  top:27px;
}